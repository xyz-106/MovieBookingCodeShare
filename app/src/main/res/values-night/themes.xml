<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheMovieBookingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    </style>
    <!-- Secondary brand color. -->
    <style name="Theme.TheMovieBookingApp.TransparentStatusBar" parent="Theme.TheMovieBookingApp">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.TheMovieBookingApp.HideStatusBar" parent="Theme.TheMovieBookingApp">
        <item name="android:statusBarColor">@color/profileicon</item>
    </style>

</resources>