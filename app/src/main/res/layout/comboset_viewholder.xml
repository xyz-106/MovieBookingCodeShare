<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small">

    <androidx.appcompat.widget.AppCompatTextView

        android:id="@+id/tvComboTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:text="Combo set M"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_regular_3x" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDescription"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvComboTitle"
        android:layout_alignStart="@id/tvComboTitle"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Combo size M 2.2oz.Coke(X1)\nand medium popcorn(X1)"
        android:textSize="@dimen/text_regular_2x" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSnackCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp"
        android:text="15$"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_regular_2x" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMinus"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_below="@id/tvSnackCost"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_toEndOf="@id/tvDescription"
        android:background="@drawable/background_snack_count"
        android:text="-" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSnackCount"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_below="@id/tvSnackCost"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_toEndOf="@id/btnMinus"
        android:background="@drawable/background_snack_count_middle"
        android:text="0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPlus"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_below="@id/tvSnackCost"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_toEndOf="@id/btnSnackCount"
        android:background="@drawable/background_snack_count_right"
        android:text="+" />
</RelativeLayout>